public class Pencil1{
	String color;
	int penLength;

	public Pencil1(String color,int penLength){
		this.color=color;
		this.penLength=penLength;
	}
	public void write(){
		System.out.println(color+"で書いた!");
	}
	public void info(){
		System.out.println("色:"+color);
	}
	public void penLength(){
		for(int i=0;i<penLength;i++){
			System.out.print("+");
		}
	System.out.print(">");
	}
	
}

